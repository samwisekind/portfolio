extends ../layout.pug

include ../components/button
include ../components/photo

block variables
  - const PAGE_SECTION = "home";
  - const featuredPhotos = photography.photos.filter((photo) => photo.featured);

block styles
  link(href="../../styles/home.scss" type="text/css" rel="stylesheet")

block main
  section.me
    h1
      | I'm a <span>software engineer</span> / <span>tech lead</span> focusing on <span>frontend</span> + <span>backend</span> web development
    .bottom
      +button({ text: "Hello", title: "Learn more", url: "/me" })

  if featuredPhotos
    section.photography
      for photo in featuredPhotos
        figure.photo.js-photo
          +button({ text: "More", title: "View photography", url: "/photography" })
          picture
            if photo.src.webp
              source(type="image/webp" data-srcset=photo.src.webp)
            img(data-src=photo.src.jpg alt=photo.alt).js-lazy
