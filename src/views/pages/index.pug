extends ../layout.pug

include ../icons.pug

block variables
  - const PAGE_SECTION = "home";
  - const featuredPhotos = photography.photos.filter((photo) => photo.featured);

block main
  h1(data-current="👋" data-emojis="👋|✌️|🤙|🖖|🤘|🤝|❤️").intro.js-greeting
    span="Hello, you!"

  section.about
    p <b>I'm a software engineer</b> focusing on web development, <b>currently as a Tech Lead in e-commerce</b>, using technologies such as:
    ul
      li Node.js
      li TypeScript / ES6+
      li React / NextJS
      li WebSockets
      li (S)CSS
      li Docker / Kubernetes
      li AWS
      li Canvas
      li SVG
      li WebGL / three.js
      li MongoDB
    p Feel free to <a href="mailto:sam@flamov.com?subject=Hello!">drop me an email</a> for a résumé or to get in touch! <span class="mono">:-)</span>

  section.photography
    a(href="/photography" alt="Photography")
      span
        ="Photography"
        +icon-internal
      img(data-src="https://portfolio-cdn.ams3.digitaloceanspaces.com/test.jpg" alt="" crossorigin="anonymous").js-lazy

  a(href="https://github.com/samwisekind" title="View GitHub profile" rel="noopener noreferrer" target="_blank").link.github
    +icon-github
    ="GitHub"
    +icon-external
  
  a(href="https://codepen.com/Flamov" title="View CodePen profile" rel="noopener noreferrer" target="_blank").link.codepen
    +icon-codepen
    ="CodePen"
    +icon-external

  section.recognitions
      h2 Recognitions
      ul
        li
          span.date Sep 2021
          a(href="https://awwwards.com/sites/tng-fintech-group" rel="noopener noreferrer" target="_blank")
            ="Awwwards – User Approved award"
            +icon-external
        li
          span.date Sep 2021
          a(href="https://cssdesignawards.com/sites/tng-fintech-group/31268" rel="noopener noreferrer" target="_blank")
            ="CSS Design Awards – Special Kudos award"
            +icon-external
