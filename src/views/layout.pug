- const DEFAULT_PAGE_TITLE = "Sam's Portfolio";
- const DEFAULT_PAGE_DESCRIPTION = "Sam's web development and design portfolio."

block variables

doctype html
html(lang="en")

  head
    meta(charset="utf-8")
    meta(http-equiv="x-ua-compatible" content="ie=edge")
    meta(name="viewport" content="width=device-width, height=device-height, initial-scale=1, user-scalable=no")
    meta(name="description" content=(PAGE_DESCRIPTION || DEFAULT_PAGE_DESCRIPTION))
    meta(name="subject" content=(PAGE_DESCRIPTION || DEFAULT_PAGE_DESCRIPTION))
    title=(PAGE_TITLE ? `${PAGE_TITLE} | ${DEFAULT_PAGE_TITLE}` : DEFAULT_PAGE_TITLE)
    link(href="../../styles/main.scss" type="text/css" rel="stylesheet")
    base(href="/")

  body(class=PAGE_SECTION)
    nav.header
      a(href="/" class=(PAGE_SECTION === "home" ? "active" : false)).link Home
      a(href="/photography" class=(PAGE_SECTION === "photography" ? "active" : false)).link Photography
    main
      block main
