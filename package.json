{
  "private": true,
  "scripts": {
    "build": "parcel build src/views/pages/*.pug --dist-dir dist --detailed-report --no-cache --no-source-maps",
    "serve": "parcel serve src/views/pages/*.pug --dist-dir dist",
    "eslint": "eslint src/",
    "stylelint": "stylelint 'src/**/*.scss'",
    "typescript": "tsc",
    "typescript:watch": "tsc --noEmit --watch",
    "test": "jest --passWithNoTests",
    "test:coverage": "npm run test -- --coverage",
    "test:watch": "npm run test:coverage -- --watch"
  },
  "dependencies": {
    "vanilla-lazyload": "^17.5.0"
  },
  "devDependencies": {
    "@parcel/transformer-pug": "^2.0.1",
    "@parcel/transformer-sass": "^2.0.1",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "eslint": "^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^15.0.0",
    "eslint-plugin-import": "^2.25.2",
    "jest": "^27.3.1",
    "parcel": "^2.0.1",
    "stylelint": "^14.0.1",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "stylelint-order": "^5.0.0",
    "stylelint-scss": "^4.0.0",
    "typescript": "^4.4.4"
  },
  "eslintConfig": {
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "extends": [
      "airbnb-base",
      "airbnb-typescript/base"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-sass-guidelines",
    "plugins": [
      "stylelint-scss",
      "stylelint-order"
    ],
    "rules": {
      "selector-max-compound-selectors": null,
      "selector-no-qualifying-type": null,
      "property-no-vendor-prefix": [
        true,
        {
          "ignoreProperties": [
            "backdrop-filter",
            "background-clip"
          ]
        }
      ]
    }
  },
  "jest": {
    "verbose": true,
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/assets/**/*.ts"
    ]
  },
  "browserslist": "> 0.5%, last 2 versions, not dead"
}
